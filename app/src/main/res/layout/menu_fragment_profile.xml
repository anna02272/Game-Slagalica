<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".menu.ProfileFragment">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <Button
                android:id="@+id/logout"
                android:drawableLeft="@drawable/menu_logout"
                android:text="@string/menu_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_gravity="end"
                />
            <Button
                android:id="@+id/changeImage"
                android:text="@string/add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_gravity="start"
                />

            <Button
                android:id="@+id/saveImage"
                android:text="@string/save_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/pic_walle_eve_dark_sky2"
                android:orientation="vertical"
                android:padding="20dp">


                <ImageView
                    android:id="@+id/uploadImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic_eve_icon_circle" />

                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="25dp"
                    android:paddingBottom="5dp"
                    android:text="@string/menu_user"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="25dp"
                    android:text="@string/menu_user_email"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp">

                    <TextView
                        android:id="@+id/gameDescription"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/chinese_violet"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="40dp"
                            android:text="@string/games_ko_zna_zna"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"></TextView>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="@string/games_spojnica"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"></TextView>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="@string/games_asocijacija"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="9dp">

                            <TextView
                                android:id="@+id/koZnaZna"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_ko_zna_zna"
                                android:textAlignment="center"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp">

                            <TextView
                                android:id="@+id/spojnice"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_spojnice"
                                android:textAlignment="center"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:text="">

                            <TextView
                                android:id="@+id/asocijacije"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_asocijacije"
                                android:textAlignment="center"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="@string/games_skocko"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"></TextView>

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="40dp"
                            android:text="@string/games_korak_po_korak"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"></TextView>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="@string/games_mojbroj"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp">

                            <TextView
                                android:id="@+id/skocko"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_skocko"
                                android:textAlignment="center"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/korakPoKorak"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_korak_po_korak"
                                android:textAlignment="center"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:text="">

                            <TextView
                                android:id="@+id/mojBroj"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_moj_broj"
                                android:textAlignment="center"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp">

                        <TextView
                            android:id="@+id/gameLine1"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/chinese_violet"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:text="@string/profile_broj_odigranih_partija"
                            android:textColor="@color/white"
                            android:textSize="20dp"></TextView>

                        <TextView
                            android:id="@+id/playedGames"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25dp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp">

                        <TextView
                            android:id="@+id/gameLine"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/chinese_violet"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="50dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:text="@string/profile_pobeda"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20dp">

                        </TextView>

                        <TextView
                            android:id="@+id/wonGames"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20dp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:text="@string/profile_poraz"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20dp">

                        </TextView>

                        <TextView
                            android:id="@+id/lostGames"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20dp"></TextView>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>