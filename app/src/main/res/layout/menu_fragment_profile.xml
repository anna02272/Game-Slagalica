<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".menu.ProfileFragment">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <Button
                android:id="@+id/logout"
                android:drawableLeft="@drawable/menu_logout"
                android:text="@string/menu_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_gravity="end"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background = "@drawable/pic_walle_eve_dark_sky2"
                android:padding="20dp">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/uploadImage"
                    android:src="@drawable/pic_eve_icon_circle" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_user"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingLeft="25dp"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/menu_user_email"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingLeft="25dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp">
                    <TextView
                        android:id="@+id/gameDescription"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:gravity="center"
                        android:background="@color/chinese_violet"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="40dp"
                            android:text="@string/games_ko_zna_zna"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"></TextView>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="@string/games_spojnica"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"></TextView>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="@string/games_asocijacija"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"></TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="9dp">
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_prosek_osvojenih_bodova"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_ko_zna_zna"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp">
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_prosek_osvojenih_bodova"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_spojnice"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:text="">
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_prosek_osvojenih_bodova"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_asocijacije"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="@string/games_skocko"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"></TextView>
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="40dp"
                            android:text="@string/games_korak_po_korak"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"></TextView>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="@string/games_mojbroj"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/white"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp">
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_prosek_osvojenih_bodova"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_skocko"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="30dp">
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_prosek_osvojenih_bodova"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_korak_po_korak"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:text="">
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_prosek_osvojenih_bodova"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="@string/profile_opseg_moj_broj"
                                android:textColor="@color/chinese_violet"
                                android:textSize="20dp"
                                android:textAlignment="center"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                        <TextView
                            android:id="@+id/gameLine"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:background="@color/chinese_violet"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:text="@string/profile_broj_odigranih_partija"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"></TextView>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text="@string/profile_ukupan_broj_partija"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="25dp"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="5dp">
                        <TextView
                            android:id="@+id/gameLine"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:background="@color/chinese_violet"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="50dp">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:text="@string/profile_pobeda"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20dp">

                        </TextView>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:text="@string/profile_procenat"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:text="@string/profile_poraz"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20dp">

                        </TextView>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:text="@string/profile_procenat"></TextView>
                    </LinearLayout>





                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>