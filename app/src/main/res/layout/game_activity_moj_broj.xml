<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.MojBrojActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/game_fragment_players"
        android:id="@+id/fragment_container"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false"
>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_number7"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:clickable="false"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/button_answer"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:layout_marginRight="75dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_answer2"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/linearLayout2"
            android:layout_marginTop="35dp">

            <EditText
                android:id="@+id/input1"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/login_edittext_bkg"
                android:drawablePadding="8dp"
                android:hint="@string/games_answer"
                android:padding="8dp"
                android:textColorHint="@color/gray"
                android:drawableRight="@drawable/game_clear"
                android:drawableTint="@color/dark_pruple"
                />
            <EditText
                android:id="@+id/input2"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/login_edittext_bkg"
                android:drawablePadding="8dp"
                android:hint="@string/games_answer"
                android:padding="8dp"
                android:textColorHint="@color/gray"
                android:drawableRight="@drawable/game_clear"
                android:drawableTint="@color/dark_pruple"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout3"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_stop"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/games_mojbroj_stop"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_confirm"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/games_mojbroj_confirm"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
              />




        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/button_number1"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_number2"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_number3"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_number4"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout5"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/button_number5"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_number6"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout6"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/button_plus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_minus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_multiple"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="15sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_divide"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_open"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
            <Button
                android:id="@+id/button_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout7"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/button_end"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:text="@string/games_end"
                android:textSize="10sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>

    </RelativeLayout>



    </LinearLayout>

</RelativeLayout>